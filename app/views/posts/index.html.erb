<div >
  <div >
    <a href="#" >
      <div >
        <img src=<%= @user.photo %>>
      </div>
      <div >
        <h2 ><%= @user.name %></h2>
        <p >Number of posts: <%= @user.posts_counter %></p>
      </div>
    </a>
  </div>
  <ul >
    <% @posts.each do |post| %>
      <li >
        <a href="<%= user_post_path(@user, post) %>" >
          <div >
            <div>  
              <h2 ><%= post.title %></h2>
              <p ><%= post.text %></p>
            </div> 
            <p >Likes: <%= post.likes_counter %> , comments: <%= post.comments_counter %></p>
          </div>
          <ul >
            <%post.most_recent_comments.each do |comment| %>
              <li>
                <h3><%= @user.name %>: <%= comment.text %></h3>
              </li>
            <% end %>
          </ul>
        </a>
      </li>
    <% end %>
  </ul>
</div>