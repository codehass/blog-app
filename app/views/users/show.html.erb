<div class='usersCards'>
  <div class="userCard">
    <a href="#" >
      <div >
        <img src=<%= @user.photo %>>
      </div>
      <div class="userInfo">
        <h2 ><%= @user.name %></h2>
        <p >Number of posts: <%= @user.posts_counter %></p>
      </div>
    </a>
  </div>
  <div class="bio"> 
    <h4>Bio</h4>
    <p >
    <%= @user.bio %>
   </p>
  </div>

  <ul class='postInfo'>
    <% @posts.each do |post| %>
      <li class='postCard'>
        <a href="<%= user_post_path(@user, post) %>" >
          <h3 ><%= post.title %></h3>
          <p ><%= post.text %></p>
          <div class="likesComments">
                    <p >
          <% if post.likes_counter == nil %>
            Likes: 0 
          <% else %>
            Likes: <%= post.likes_counter %>
          <% end %>
        </p>
        <p >
          <% if post.comments_counter == nil %>
            Comments: 0 
          <% else %>
            Comments: <%= post.comments_counter %>
          <% end %>
        </p>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
  <div class="btnSeeAll">
    <a href=<%= "/users/#{@user.id}/posts"%> >
    See All Posts
    </a>
  </div>
</div>