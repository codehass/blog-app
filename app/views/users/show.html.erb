<div >
  <div >
    <a href="#" >
      <div >
        <img src=<%= @user.photo %>>
      </div>
      <div >
        <h2 ><%= @user.name %></h2>
        <p >Number of posts: <%= @user.posts_counter %></p>
      </div>
    </a>
  </div>
  <p >
    <%= @user.bio %>
  </p>
  <ul >
    <% @posts.each do |post| %>
      <li >
        <a href="<%= user_posts_path(@user) %>" >
          <div >
            <div>  
              <h2 ><%= post.title %></h2>
              <p ><%= post.text %></p>
            </div> 
            <p >Likes: <%= post.likes_counter %> , comments: <%= post.comments_counter %></p>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
</div>