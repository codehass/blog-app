<h1>Hello from users </h1>
<% @users.each do |user| %>
  <li >
      <a href="users/<%= user.id %>" >
        <div >
          <img src=<%= user.photo %>>
        </div>
        <div >
          <h2 ><%= user.name %></h2>
          <p >Number of posts: <%= user.posts_counter %></p>
        </div>
      </a>
    </li>
<% end %>