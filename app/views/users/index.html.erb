<ul class='usersCards'>
  <% @users.each do |user| %>
    <li class="userCard">
      <a href="users/<%= user.id %>" >
        <div ">
          <img src=<%= user.photo %>>
        </div>
        <div class="userInfo">
          <h2 ><%= user.name %></h2>
          <p >Number of posts: <%= user.posts_counter %></p>
        </div>
      </a>
    </li>
  <% end %>
</ul>